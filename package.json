{
  "name": "nodejstemplete",
  "version": "0.0.1",
  "description": "",
  "author": "VFA",
  "license": "MIT",
  "scripts": {
    "next": "cd src/client && next",
    "build": "rimraf dist && tsc -p tsconfig.build.json && cd src/client && next build",
    "start:dev": "ts-node-dev src/server/main.ts",
    "prestart:prod": "rimraf dist && npm run build",
    "start": "node dist/main",
    "test": "jest --detectOpenHandles --runInBand --forceExit",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./__tests__/jest-e2e.json --runInBand --colors --verbose --forceExit",
    "test:e2e:file": "npm run test:e2e -t",
    "start-docker": "export NODE_ENV=docker && docker-compose -f ./docker-compose.yml up --build -d",
    "start-local-docker": "export NODE_ENV=docker && docker-compose -f ./docker-compose.dev.yml up --build",
    "stop-local-docker": "export NODE_ENV=docker && docker-compose -f ./docker-compose.dev.yml down",
    "prepare": "husky install",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migrate:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "end:local": "cp env/.env_example .env",
    "end:development": "cp env/.env_develop .env",
    "end:staging": "cp env/.env_staging .env",
    "end:production": "cp env/.env_production .env"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "6.11.7",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "6.11.7",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "6.11.7",
    "@nestjs/swagger": "4.2.9",
    "@nestjs/typeorm": "^8.0.2",
    "@types/lodash": "^4.14.149",
    "aws-sdk": "^2.515.0",
    "axios": "^0.19.2",
    "base64-img": "^1.0.4",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "dotenv": "^7.0.0",
    "local": "^0.3.3",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongodb": "^3.2.5",
    "mysql2": "^2.3.0",
    "nest-router": "^1.0.9",
    "nest-schedule": "^0.6.3",
    "next": "^11.1.2",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.3",
    "rxjs": "^7.3.1",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.38",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.10",
    "@nestjs/schematics": "6.9.4",
    "@nestjs/testing": "^6.5.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "4.17.2",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^24.0.16",
    "@types/node": "13.7.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@types/supertest": "^2.0.8",
    "faker": "^4.1.0",
    "husky": "^6.0.0",
    "jest": "^24.7.1",
    "mocker-data-generator": "^2.6.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "superagent": "^5.2.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.20.1",
    "typescript": "^4.2.3",
    "xmlhttprequest": "^1.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run pretty-quick --staged"
    }
  }
}
