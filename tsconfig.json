{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/server", "test", "ormconfig.ts", "jest.config.ts"],
  "exclude": ["node_modules/**/*", ".next"],
  "ts-node": {
    "files": true
  }
}
